{
    "env": {
    "browser": true,
    "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb", 
        "plugin:react/jsx-runtime", // for react 17, must be placed after airbnb
        "airbnb/hooks",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": true
                // "jsxSingleQuote": true
            }
        ],
        "no-unused-vars":"warn",
        "no-underscore-dangle":"off",
        "import/prefer-default-export":"warn",
        "no-undef":"off",
        "no-param-reassign":"off",
        "arrow-body-style":"off",
        "react/function-component-definition":"off",
        "react/jsx-filename-extension":"off",
        "react/jsx-no-useless-fragment":"off",
        "prefer-arrow-callback":"off",
        "no-shadow":"off",
        "import/no-extraneous-dependencies":"off"
    }
}


